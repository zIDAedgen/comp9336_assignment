<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/task3"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a9336_assignment.Task3">

    <TextView
        android:text="Frequency Two"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/freq1_display"
        android:layout_alignLeft="@+id/freq1_display"
        android:layout_alignStart="@+id/freq1_display"
        android:layout_marginTop="48dp"
        android:id="@+id/freq2_display" />

    <Button
        android:text="Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3_start"
        android:layout_alignLeft="@+id/t3_start"
        android:layout_alignStart="@+id/t3_start"
        android:layout_marginTop="66dp"
        android:id="@+id/t3_stop" />

    <TextView
        android:text="Frequency One"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:id="@+id/freq1_display"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="57dp"
        android:id="@+id/t3_start"
        android:layout_below="@+id/freq2_display"
        android:layout_alignLeft="@+id/freq2_display"
        android:layout_alignStart="@+id/freq2_display" />

    <TextView
        android:text="Message"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/t3_stop"
        android:layout_alignLeft="@+id/t3_stop"
        android:layout_alignStart="@+id/t3_stop"
        android:layout_marginTop="39dp"
        android:id="@+id/fre_to_message" />
</RelativeLayout>