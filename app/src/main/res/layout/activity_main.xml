<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.a9336_assignment.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="9336 Assignment"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:id="@+id/Title"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textStyle="normal|bold" />

    <Button
        android:text="Transmitter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="74dp"
        android:id="@+id/transmiter"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="TASK3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:id="@+id/task3"
        android:layout_below="@+id/task2"
        android:layout_alignLeft="@+id/task2"
        android:layout_alignStart="@+id/task2" />

    <Button
        android:text="TASK4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/task3"
        android:layout_alignStart="@+id/task3"
        android:layout_marginBottom="27dp"
        android:id="@+id/task4" />

    <Button
        android:text="TASK1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:id="@+id/task1"
        android:layout_below="@+id/transmiter"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="TASK2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/task2"
        android:layout_below="@+id/task1"
        android:layout_alignLeft="@+id/task1"
        android:layout_alignStart="@+id/task1"
        android:layout_marginTop="30dp" />

    <Button
        android:text="DAta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/task3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/data_tran" />
</RelativeLayout>
